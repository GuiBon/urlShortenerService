			"response": []
		},
		{
			"name": "Retrieve original URL with redirect",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{short_url}}?redirect=true",
					"host": [
						"{{short_url}}"
					],
					"query": [
						{
							"key": "redirect",
							"value": "true"
						}
					]
				}
			},
